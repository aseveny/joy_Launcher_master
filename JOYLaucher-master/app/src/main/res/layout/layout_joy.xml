<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="-25.0dip"
    android:scrollbars="none">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/joy_fl_0"
            android:layout_width="@dimen/little_image_fl_width"
            android:layout_height="@dimen/little_image_fl_height"
            android:layout_marginLeft="@dimen/margin_middle1"
            android:layout_marginTop="@dimen/margin_top_service">

            <ImageView
                android:id="@+id/joy_bg_0"
                style="@style/MyImageBg"
                android:layout_marginLeft="@dimen/little_image_bg_marginLeft"
                android:background="@drawable/shadow_left" />

            <ImageView
                android:id="@+id/joy_poster_0"
                style="@style/MyImage"
                android:layout_marginLeft="@dimen/little_image_poster_marginLeft"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@+id/joy_poster_1"
                android:nextFocusRight="@+id/joy_poster_2"
                android:nextFocusUp="@+id/joy_poster_5"
                android:src="@drawable/yinyexingshang" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/joy_fl_1"
            android:layout_width="@dimen/little_image_fl_width"
            android:layout_height="@dimen/little_image_fl_height"

            android:layout_marginTop="@dimen/margin_top_service">

            <ImageView
                android:id="@+id/joy_bg_1"
                style="@style/MyImageBg"
                android:layout_marginLeft="@dimen/little_image_bg_marginLeft"
                android:background="@drawable/shadow_left" />

            <ImageView
                android:id="@+id/joy_poster_1"
                style="@style/MyImage"
                android:layout_marginLeft="@dimen/little_image_poster_marginLeft"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusRight="@+id/joy_poster_0"
                android:nextFocusUp="@+id/joy_poster_5"
                android:src="@drawable/tuijian" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/joy_fl_2"
            android:layout_width="@dimen/little_image_fl_width"
            android:layout_height="@dimen/little_image_fl_height"
            android:layout_marginLeft="@dimen/margin_middle2"
            android:layout_marginTop="@dimen/margin_top_service">

            <ImageView
                android:id="@+id/joy_bg_2"
                style="@style/MyImageBg"
                android:layout_marginLeft="@dimen/little_image_bg_marginLeft"
                android:background="@drawable/shadow_left" />

            <ImageView
                android:id="@+id/joy_poster_2"
                style="@style/MyImage"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="@dimen/little_image_poster_marginLeft"
                android:nextFocusLeft="@+id/joy_poster_0"
                android:nextFocusRight="@+id/joy_poster_3"
                android:nextFocusUp="@+id/joy_poster_5"
                android:src="@drawable/homektv" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/joy_fl_3"
            android:layout_width="@dimen/little_image_fl_width"
            android:layout_height="@dimen/little_image_fl_height"
            android:layout_marginLeft="@dimen/margin_middle3"
            android:layout_marginTop="@dimen/margin_top_service">

            <ImageView
                android:id="@+id/joy_bg_3"
                style="@style/MyImageBg"
                android:layout_marginLeft="@dimen/little_image_bg_marginLeft"
                android:background="@drawable/shadow_left" />

            <ImageView
                android:id="@+id/joy_poster_3"
                style="@style/MyImage"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="@dimen/little_image_poster_marginLeft"
                android:nextFocusLeft="@+id/joy_poster_2"
                android:nextFocusRight="@+id/joy_poster_4"
                android:nextFocusUp="@+id/joy_poster_5"
                android:src="@drawable/joy_poster_3" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/joy_fl_4"
            android:layout_width="@dimen/little_image_fl_width"
            android:layout_height="@dimen/little_image_fl_height"
            android:layout_marginLeft="@dimen/margin_right"
            android:layout_marginTop="@dimen/margin_top_service">

            <ImageView
                android:id="@+id/joy_bg_4"
                style="@style/MyImageBg"
                android:layout_marginLeft="@dimen/little_image_bg_marginLeft_right"
                android:background="@drawable/shadow_left" />

            <ImageView
                android:id="@+id/joy_poster_4"
                style="@style/MyImage"
                android:layout_marginLeft="@dimen/little_image_poster_marginLeft_right"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@+id/joy_poster_3"
                android:nextFocusUp="@+id/joy_poster_5"
                android:src="@drawable/joy_poster_4" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/joy_fl_5"
            android:layout_width="1280dip"
            android:layout_height="@dimen/big_image_fl_height"
            android:layout_marginLeft="@dimen/big_image_margin"
            android:layout_marginTop="-9.0dip">

            <ImageView
                android:id="@+id/joy_bg_5"
                android:layout_width="1280dip"
                android:layout_height="405dip"

                android:layout_marginTop="15.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/shadow_middle" />

            <ImageView
                android:id="@+id/joy_poster_5"
                android:layout_width="1185dip"
                android:layout_height="360dip"
                android:layout_marginLeft="45.0dip"
                android:layout_marginTop="40.0dip"
                android:clickable="true"
                android:focusable="true"
                android:nextFocusDown="@+id/joy_poster_1"
                android:nextFocusRight="@+id/joy_poster_1"
                android:nextFocusUp="@+id/title_joy"
                android:focusableInTouchMode="true"
                android:scaleType="fitXY"
                android:src="@drawable/ad_small" />
        </FrameLayout>
    </FrameLayout>
</HorizontalScrollView>