<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="-25.0dip"
    android:scrollbars="none">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <FrameLayout
            android:id="@+id/movie_fl_0"
            android:layout_width="@dimen/little_image_fl_width"
            android:layout_height="@dimen/little_image_fl_height"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="@dimen/margin_top_row3">

            <ImageView
                android:id="@+id/movie_bg_0"
                style="@style/MyImageBg"
                android:layout_marginLeft="@dimen/little_image_bg_marginLeft"
                android:background="@drawable/shadow_left" />

            <ImageView
                android:id="@+id/movie_poster_0"
                style="@style/MyImage"
                android:layout_marginLeft="@dimen/little_image_poster_marginLeft"
                android:nextFocusRight="@+id/movie_poster_1"
                android:nextFocusUp="@+id/movie_poster_6"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/movie_poster_0" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/movie_fl_1"
            android:layout_width="@dimen/little_image_fl_width"
            android:layout_height="@dimen/little_image_fl_height"
            android:layout_marginLeft="@dimen/margin_middle1"
            android:layout_marginTop="@dimen/margin_top_row3">

            <ImageView
                android:id="@+id/movie_bg_1"
                style="@style/MyImageBg"
                android:layout_marginLeft="@dimen/little_image_bg_marginLeft"
                android:background="@drawable/shadow_left" />

            <ImageView
                android:id="@+id/movie_poster_1"
                style="@style/MyImage"
                android:layout_marginLeft="@dimen/little_image_poster_marginLeft"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@+id/movie_poster_0"
                android:nextFocusRight="@+id/movie_poster_2"
                android:nextFocusUp="@+id/movie_poster_6"
                android:src="@drawable/movie_poster_1" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/movie_fl_2"
            android:layout_width="@dimen/little_image_fl_width"
            android:layout_height="@dimen/little_image_fl_height"
            android:layout_marginLeft="@dimen/margin_middle2"
            android:layout_marginTop="@dimen/margin_top_row3">

            <ImageView
                android:id="@+id/movie_bg_2"
                style="@style/MyImageBg"
                android:layout_marginLeft="@dimen/little_image_bg_marginLeft"
                android:background="@drawable/shadow_left" />

            <ImageView
                android:id="@+id/movie_poster_2"
                style="@style/MyImage"
                android:layout_marginLeft="@dimen/little_image_poster_marginLeft"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@+id/movie_poster_1"
                android:nextFocusRight="@+id/movie_poster_3"
                android:nextFocusUp="@+id/movie_poster_6"
                android:src="@drawable/movie_poster_4" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/movie_fl_3"
            android:layout_width="@dimen/little_image_fl_width"
            android:layout_height="@dimen/little_image_fl_height"
            android:layout_marginLeft="@dimen/margin_middle3"
            android:layout_marginTop="@dimen/margin_top_row3">

            <ImageView
                android:id="@+id/movie_bg_3"
                style="@style/MyImageBg"
                android:layout_marginLeft="@dimen/little_image_bg_marginLeft"
                android:background="@drawable/shadow_left" />

            <ImageView
                android:id="@+id/movie_poster_3"
                style="@style/MyImage"
                android:layout_marginLeft="@dimen/little_image_poster_marginLeft"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@+id/movie_poster_2"
                android:nextFocusUp="@+id/movie_poster_4"
                android:src="@drawable/movie_poster_3" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/movie_fl_4"
            android:layout_width="@dimen/little_image_fl_width"
            android:layout_height="@dimen/little_image_fl_height"
            android:layout_marginLeft="@dimen/margin_right"
            android:layout_marginTop="@dimen/margin_top_row3">

            <ImageView
                android:id="@+id/movie_bg_4"
                style="@style/MyImageBg"
                android:layout_marginLeft="@dimen/little_image_bg_marginLeft_right"
                android:background="@drawable/shadow_left" />

            <ImageView
                android:id="@+id/movie_poster_4"
                style="@style/MyImage"
                android:layout_marginLeft="@dimen/little_image_poster_marginLeft_right"
                android:nextFocusLeft="@+id/movie_poster_3"
                android:nextFocusUp="@+id/movie_poster_5"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/shaoeryule" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/movie_fl_6"
            android:layout_width="1280dip"
            android:layout_height="@dimen/big_image_fl_height"
            android:layout_marginLeft="@dimen/big_image_margin"
            android:layout_marginTop="-9.0dip">

            <ImageView
                android:id="@+id/movie_bg_6"
                android:layout_width="1270dip"
                android:layout_height="@dimen/big_image_bg_height"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="15.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/shadow_middle" />

            <ImageView
                android:id="@+id/movie_poster_6"
                android:layout_width="1181dip"
                android:layout_height="348dip"
                android:layout_marginLeft="47.0dip"
                android:layout_marginTop="38.0dip"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@+id/movie_poster_0"
                android:nextFocusRight="@+id/movie_poster_0"
                android:nextFocusUp="@+id/title_movie"
                android:scaleType="fitXY"
                android:src="@drawable/movie_bg" />
        </FrameLayout>

    </FrameLayout>

</HorizontalScrollView>