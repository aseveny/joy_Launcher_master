<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/app_clorer"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="35.0dip"
        android:paddingRight="35.0dip"
        android:paddingTop="10.0dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10.0dip"
            android:text="@string/app_list"
            android:textColor="#ffb2b2b2"
            android:textSize="30.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5.0dip"
            android:text="@string/del_app"
            android:textColor="#ff999999"
            android:textSize="18.0sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="5.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/line760" />

        <GridView
            android:id="@+id/app_grid_new"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="5.0dip"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="20.0dip"
            android:horizontalSpacing="10.0dip"
            android:numColumns="7"
            android:scrollbars="none"
            android:verticalSpacing="20.0dip" />
    </LinearLayout>
</FrameLayout>